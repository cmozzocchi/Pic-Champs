<h1>Recent Pictures</h1>

<ul>
	<% @pictures_recent.each do |p| %>
		<li><%= p.title %></li>
			<% if p.url.blank? %>
    		<li><%= image_tag p.image %></li>
    		<% else %>
    		<li><%= image_tag p.url %></li>
			<% end %>
		<li>Votes: <%= p.votes_count %></li>
		<li><%= link_to time_ago_in_words(p.created_at) + ' ago' + ' |', p %>

	<% end %>
<ul>